{% extends "OCCoreBundle::layout.html.twig" %}

{% block title %}
    Connexion - {{ siteName }}
{% endblock %}

{% block titlePage %}
    Connexion
{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('core_user_login_check') }}" method="post">
        <label for="email">Email:</label>
        <input type="text" id="email" name="_username" value="{{ last_username }}" />

        <label for="password">Mot de passe:</label>
        <input type="password" id="password" name="_password" />

        <button type="submit" class="btn btn-default">Connexion</button>
        <a href="{{ path('core_user_forget_pass') }}" class="btn btn-warning">Mot de passe oubli√©</a>
    </form>
{% endblock %}
