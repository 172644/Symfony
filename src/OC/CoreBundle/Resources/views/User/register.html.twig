{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
    Inscription - {{ siteName }}
{% endblock %}

{% block titlePage %}
    Inscription
{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {% if message is defined %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endif %}

    {{ form_errors(form) }}

    <div class="well">




        <div class="form-group">
            <label class="col-sm-2 control-label">Rôle</label>

            <div class="col-sm-10">
                {% for role in roles %}
                    <input type="radio" name="role" value="{{ role.val }}" id="{{ role.val }}" checked><label for="{{ role.val }}">{{ role.str }}</label>
                    <br />
                {% endfor %}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.username, 'Pseudo', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.username) }}

            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Sécurité</label>

            <div class="col-sm-10">
                {{ form_row(form.password) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.lastname) }}

            <div class="col-sm-10">
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.firstname) }}

            <div class="col-sm-10">
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.email) }}

            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {#<div class="form-group">#}
            {#{{ form_label(form.image, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}#}
            {#{{ form_errors(form.image) }}#}

            {#<div class="col-sm-10">#}
                {#{{ form_widget(form.image) }}#}
            {#</div>#}
        {#</div>#}

        <div class="form-group">
            <span class="col-sm-2 control-label"> </span>

            <div class="col-sm-10">
                {{ form_rest(form) }}
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}