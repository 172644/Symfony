
{% if (occurence > 0) or (is_granted('ROLE_AUTEUR') and advert.author.username == app.user.username) or (is_granted('ROLE_ADMIN')) %}
    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Auteur</th>
